<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Target Account: "
            android:id="@+id/rec_account_label"
            android:gravity="center_vertical"
            android:layout_centerVertical="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/rec_account_label"
            android:id="@+id/rec_account_spinner"
            android:layout_centerVertical="true" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Payer: "
            android:id="@+id/rec_label"
            android:layout_centerVertical="true"
            android:width="75dp" />
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type Contact Name"
            android:layout_toRightOf="@+id/rec_label"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/rec_auto_complete"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Amount: "
            android:id="@+id/rec_amt_label"
            android:layout_centerVertical="true"
            android:width="75dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount"
            android:layout_toRightOf="@+id/rec_amt_label"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Description: "
            android:id="@+id/pay_des_label"
            android:layout_centerVertical="true"
            android:width="75dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:layout_toRightOf="@+id/pay_des_label"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Submit"
        android:background="#13b586"
        android:id="@+id/rec_btn"/>


</LinearLayout>