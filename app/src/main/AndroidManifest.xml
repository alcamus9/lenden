<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.srinivas.testlogin">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- android:theme="@android:style/Theme.NoTitleBar" -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.example.srinivas.lenden.MainActivity"
            android:label="LenDen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.srinivas.lenden.RegistrationActivity" />
        <activity android:name="com.example.srinivas.lenden.PayReceiveActivity" />
        <activity
            android:name="com.example.srinivas.lenden.HomePageActivity"
            android:label="LenDen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name="com.example.srinivas.lenden.PayActivity" />
        <activity android:name="com.example.srinivas.lenden.ReceiveActivity" />
        <activity
            android:name="com.example.srinivas.lenden.ContactsActivity"
            android:label="Contacts"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.example.srinivas.lenden.RecyclerActivity"
            android:label="@string/title_activity_recycler"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.example.srinivas.lenden.GroupsActivity"
            android:label="@string/title_activity_group"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.example.srinivas.lenden.AddGroupActivity"
            android:label="@string/title_activity_add_group"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.example.srinivas.lenden.GroupActivity"
            android:label="@string/title_activity_group"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.example.srinivas.lenden.AddBillActivity"
            android:label="@string/title_activity_add_bill"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
    </application>

</manifest>
